<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="//images-static.naikaa.com/media/wysiwyg/uiTools/2024-3/beauty.png" type="image/x-icon">
  <title>Buy Cosmetics Products & Beauty Products Online in India at Best Price | Nykaa</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body style="background-color: #f8f9fa; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">

  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-light sticky-top" style="background-color:#fa8ebb; padding: 12px 20px;">
    <div class="container-fluid align-items-center">
      
      <!-- Logo -->
      <a class="navbar-brand fw-bold" href="#" style="color: white; font-size: 28px; font-weight: 700; letter-spacing: 1px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); display: flex; align-items: center;">
        <img src="images/nykaa-logo.png" alt="Nykaa Logo" style="height: 40px; margin-right: 10px;">
      </a>
      
      <!-- Toggler (for mobile) -->
      <button class="navbar-toggler text-white border-white" type="button" data-bs-toggle="collapse" data-bs-target="#nykaaNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <!-- Main navbar content -->
      <div class="collapse navbar-collapse" id="nykaaNavbar">
        
        <!-- Search Bar -->
        <form class="d-flex mx-auto" method="GET" action="/user" style="width: 45%;">
          <input class="form-control me-2 rounded-start-pill border-0" type="search"
                 placeholder="Search for products, brands and more" name="search"
                 style="box-shadow: none; padding: 10px 15px;" />
          <button class="btn btn-light rounded-end-pill px-4" type="submit">
            <i class="bi bi-search"></i>
          </button>
        </form>
  
        
        <!-- Right Side Buttons -->
        <div class="d-flex align-items-center ms-auto">
          <a href="/user/loginUser" class="btn btn-light btn-sm me-2 rounded-pill px-3 fw-semibold">Login</a>
          <a href="/user/register" class="btn btn-light btn-sm me-2 rounded-pill px-3 fw-semibold">Register</a>
          <a href="/user/cart" class="btn btn-outline-light btn-sm me-2 rounded-pill px-3 fw-semibold">Cart</a>
          
          <!-- Profile Dropdown Button -->
          <div class="dropdown">
            <button class="btn btn-outline-light btn-sm me-2 rounded-pill px-3 fw-semibold dropdown-toggle" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-circle me-1"></i> Profile
            </button>
            <ul class="dropdown-menu" aria-labelledby="profileDropdown">
              <li><a class="dropdown-item" href="/user/view-Profile">View Profile</a></li>
              <li><a class="dropdown-item" href="/user/Change-Password">Change Password</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/user/logoutuser">Log Out</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </nav>


  <div id="productCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000" style="margin-top: 20px;">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://img.freepik.com/free-vector/gradient-shopping-center-facebook-cover_23-2149353163.jpg?t=st=1745043994~exp=1745047594~hmac=623ba46b836e1644fc1fddb01f9be080179f8404c8db5366387869aedaa7ad06&w=1380" class="d-block w-100" style="height: 500px;" alt="Featured Offer 1" />
      </div>
      <div class="carousel-item">
        <img src="https://img.freepik.com/premium-psd/social-media-banner-template-this-weekend-special-sale-twitter-banner-template_664482-413.jpg?w=1380" class="d-block w-100" style="height: 500px;" alt="Featured Offer 2" />
      </div>
      <div class="carousel-item">
        <img src="https://img.freepik.com/free-vector/fashion-trends-sale-banner-template_23-2150769839.jpg?t=st=1745044485~exp=1745048085~hmac=de51e7e0c533f627bf0a2284cda05c6d3161ea7621f112e0158b4e395112ff7b&w=1060" class="d-block w-100" style="height: 500px;" alt="Featured Offer 3" />
      </div>
    </div>
  
    <!-- Carousel controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  
  <!-- Category Buttons -->
  <div class="container my-4">
    <div class="d-flex flex-wrap justify-content-center">
      <a href="/user" class="btn" style="color: #fa8ebb; border: 2px solid #fa8ebb; padding: 12px 24px; font-size: 16px; border-radius: 50px; margin: 8px; min-width: 130px; background: none; transition: all 0.3s ease;">
        All
      </a>
      <% categories.forEach((category) => { %>
        <a href="/user?category=<%= category._id %>" class="btn" style="color: #fa8ebb; border: 2px solid #fa8ebb; padding: 12px 24px; font-size: 16px; border-radius: 50px; margin: 8px; min-width: 130px; background: none; transition: all 0.3s ease;">
          <%= category.category %>
        </a>
      <% }); %>
    </div>
</div>
 <!-- Product Grid -->

 <div class="container mt-5">
  <div class="row g-4">
    <% allProducts.forEach(product => { %>
      <div class="col-sm-4 col-md-5 col-lg-4">
        <div class="card h-100 border-0 shadow-sm" style="border-radius: 15px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease, box-shadow 0.3s ease; background-color: #fff;" onmouseover="this.style.transform='translateY(-10px)'; this.style.boxShadow='0 12px 24px rgba(0, 0, 0, 0.2)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 6px 12px rgba(0, 0, 0, 0.1)'">
          <img src="<%= product.productImage %>" class="card-img-top" alt="<%= product.title %>" style="height: 220px; object-fit: cover; border-radius: 15px 15px 0 0;" />
          <div class="card-body" style="padding: 20px; background-color: #ffffff;">
            <h5 class="card-title" style="font-weight: 700; font-size: 1.2rem; color: #333;"><%= product.title %></h5>
            <p class="category-name" style="font-size: 0.95rem; color: #6c757d; margin-bottom: 5px;"><%= product.category?.name || 'Uncategorized' %>
            </p>
            <p class="product-description" style="font-size: 0.95rem; color: #555; margin-bottom: 10px;"><%= product.desc.length > 80 ? product.desc.substring(0, 80) + '...' : product.desc %></p>
            <h6 class="product-price" style="font-weight: 700; color: #e922b0; font-size: 1.1rem;">â‚¹ <%= product.price %></h6>
          </div>
          <div class="card-footer" style="background-color: transparent; border-top: 1px solid #ddd; padding: 15px 10px;">
            <a href="/user/single-product/<%= product._id %>" class="btn w-100 rounded-pill" style="background: linear-gradient(90deg, #fa8ebb, #f06dcb); color: white; font-weight: 600; padding: 15px 25px; font-size: 1rem; text-transform: uppercase; letter-spacing: 1px; transition: background 0.3s ease, transform 0.3s ease; border: none; text-align: center;" onmouseover="this.style.background='linear-gradient(90deg, #f06dcb, #fa8ebb)'; this.style.transform='translateY(-2px)'" onmouseout="this.style.background='linear-gradient(90deg, #fa8ebb, #f06dcb)'; this.style.transform='translateY(0)'">
              View Details
            </a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>



<!--======================================================== Footer================================== -->

