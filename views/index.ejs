  <div class="container">
    <div class="row">
      <!-- About Us Section -->
      <div class="col-md-3 mb-4">
        <h5 class="fw-bold mb-3" style="color: #fa8ebb;">About Nykaa</h5>
        <p class="text-light bg-dark">Nykaa is India's leading beauty and wellness destination offering the best in fashion, beauty, and wellness products. Shop online for the latest in beauty trends and cosmetics.</p>
      </div>

      <!-- Quick Links Section -->
      <div class="col-md-3 mb-4">
        <h5 class="fw-bold mb-3" style="color: #fa8ebb;">Quick Links</h5>
        <ul class="list-unstyled">
          <li><a href="#" class="text-light bg-dark text-decoration-none" style="color: #fa8ebb;">Home</a></li>
          <li><a href="#" class="text-light bg-dark text-decoration-none" style="color: #fa8ebb;">Shop</a></li>
          <li><a href="#" class="text-light bg-dark text-decoration-none" style="color: #fa8ebb;">Categories</a></li>
          <li><a href="#" class="text-light bg-dark text-decoration-none" style="color: #fa8ebb;">Brands</a></li>
          <li><a href="#" class="text-light bg-dark text-decoration-none" style="color: #fa8ebb;">Offers</a></li>
        </ul>
      </div>

      <!-- Contact Info Section -->
      <div class="col-md-3 mb-4">
        <h5 class="fw-bold mb-3" style="color: #fa8ebb;">Contact Us</h5>
        <p class="text-light bg-dark" style="color: #fa8ebb;">Email: support@nykaa.com</p>
        <p class="text-light bg-dark" style="color: #fa8ebb;">Phone: +91 123 456 7890</p>
        <p class="text-light bg-dark" style="color: #fa8ebb;">Address: Nykaa, Mumbai, India</p>
      </div>

      <!-- Social Media Section -->
      <div class="col-md-3 mb-4">
        <h5 class="fw-bold mb-3" style="color: #fa8ebb;">Follow Us</h5>
        <div>
          <a href="#" class="text-light bg-dark me-3" style="font-size: 1.5rem; transition: color 0.3s; color: #fa8ebb;">
            <i class="bi bi-facebook"></i>
          </a>
          <a href="#" class="text-light bg-dark me-3" style="font-size: 1.5rem; transition: color 0.3s; color: #fa8ebb;">
            <i class="bi bi-twitter"></i>
          </a>
          <a href="#" class="text-light bg-dark me-3" style="font-size: 1.5rem; transition: color 0.3s; color: #fa8ebb;">
            <i class="bi bi-instagram"></i>
          </a>
          <a href="#" class="text-light bg-dark me-3" style="font-size: 1.5rem; transition: color 0.3s; color: #fa8ebb;">
            <i class="bi bi-youtube"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- Newsletter Section -->
    <div class="row mt-5">
      <div class="col-md-6 mx-auto text-center">
        <h5 class="fw-bold mb-3 text-white" style="color: #fa8ebb;">Subscribe to Our Newsletter</h5>
        <p class="text-light bg-dark" style="color: #fa8ebb;">Get the latest updates on new arrivals, offers, and more.</p>
        <div class="input-group mb-3">
          <input type="email" class="form-control" placeholder="Enter your email" aria-label="Email" aria-describedby="subscribe-button" style="border-radius: 50px; padding: 10px;">
          <button class="btn btn-light" type="button" id="subscribe-button" style="border-radius: 50px; background-color: #fa8ebb; color: white; font-weight: 600; transition: background 0.3s ease;">Subscribe</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="bg-dark py-2 text-center">
    <p class="text-white mb-0" style="font-size: 0.9rem; color: #fa8ebb;">&copy; 2025 Nykaa. All rights reserved.</p>
  </div>
</footer>

<!-- Add this to include Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
